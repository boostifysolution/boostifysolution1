@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
Layout = "/Views/Shared/_EmptyLayout.cshtml";
}

<!-- micromodal -->
<script src="https://unpkg.com/micromodal/dist/micromodal.min.js" asp-append-version="true"></script>


<script src="~/js/users/userMaster.js" asp-append-version="true"></script>
<link type="text/css" rel="stylesheet" href="~/css/users/userMaster.css" />

<script type="text/javascript">
    $(document).ready(function () {
        userMaster.masterInitialize();
    });
</script>

<div class="navbar navbar-toggleable-sm d-block d-md-none">
    <div class="container">
        <a href="/users/home" class="navbar-brand" rel="keep-params">
            <img src="~/images/logos/boostify-white.png">
        </a>
        <div class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent" aria-expanded="false">
            <i class="fa-solid fa-bars"></i>
        </div>
    </div>
    <div class="navbar-collapse collapse justify-content-end">
        <div class="container">
            <div class="d-flex flex-column pt-2 pb-2">
                <a class="nav-item" href="/users/home" rel="keep-params">
                    @localizer["Home"]
                </a>
                <a class="nav-item" href="/users/wallet" rel="keep-params">
                    @localizer["Wallet"]
                </a>
                <a class="nav-item" href="/users/profile" rel="keep-params">
                    @localizer["Profile"]
                </a>
                <a class="nav-item" data-bind="click: signOutClick">
                    @localizer["Sign Out"]
                </a>
            </div>
        </div>
    </div>
</div>

<nav class="navbar d-none d-md-block">
    <div class="container">
        <a class="navbar-brand" asp-area="" rel="keep-params" href="/users/home">
            <img src="~/images/logos/boostify-white.png">
        </a>
        <div class="d-flex flex-row desktop-navbar">
            <a class="nav-item" rel="keep-params" href="/users/home">
                Home
            </a>
            <a class="nav-item" rel="keep-params" href="/users/wallet">
                Wallet
            </a>
            <a class="nav-item" rel="keep-params" href="/users/profile">
                Profile
            </a>
            <a class="nav-item" data-bind="click: signOutClick">
                Sign Out
            </a>
        </div>
    </div>
</nav>
<div class="users-body">
    @RenderBody()
</div>
<footer class="footer footer-holder">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 ps-0 pe-0 mb-4 mb-md-0">
                <img class="footer-logo" src="~/images/logos/boostify-white.png">
                <div class="d-flex align-items-center mt-3">
                    © 2020–2023 Boostify Solution
                </div>
            </div>
            <div class="col-12 col-md-9">
                <div class="d-flex flex-column">
                    <a rel="keep-params" href="/users/signin">Log In</a>
                    <a rel="keep-params" href="/users/signup">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</footer>

@section Scripts {
@RenderSection("Scripts", required: false)
}