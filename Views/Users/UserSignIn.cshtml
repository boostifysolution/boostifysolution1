@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
ViewData["Title"] = "Sign In | Boostify Solution";
Layout = "/Views/Shared/_EmptyLayout.cshtml";
}

<script src="~/js/users/userSignin.js" asp-append-version="true"></script>

<div class="d-flex flex-column" style="background-color: var(--background-grey); height: 100vh;">
    <div class="signin-content-holder">
        <div class="signin-modal-holder">
            <div class="d-flex flex-column">
                <div class="text-center d-flex flex-column align-items-center">
                    <img class="signin-logo" src="~/images/logos/boostify.png">
                </div>
                <div class="h-100 d-flex flex-column text-start">
                    <span class="text-center mb-3 fw-bold">@localizer["LogInToYourAccount"]</span>
                    <div class="mb-2">
                        <p class="text-danger" data-bind="text: errorMessage, css: errorMessageClass"></p>
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["Email"]
                        </label>
                        <input type="text" class="form-control" data-bind="value: username">
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["Password"]
                        </label>
                        <input id="userPassword" class="form-control" type="password" placeholder="Password"
                            data-bind="value: password, event: { keyup: passwordEnter }" />
                    </div>
                    <button class="primary-button button w-100 mt-2 mb-3" data-bind="click: signInClick">
                        @localizer["LogIn"]
                    </button>
                    <hr>
                    <span class="text-center">@localizer["DontHaveAccountYet"] <a rel="keep-params" href="/users/signup">@localizer["SignUpHere"]</a></span>
                </div>
            </div>
        </div>
    </div>
</div>