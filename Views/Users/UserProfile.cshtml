@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
ViewData["Title"] = "Home | Boostify Solution";
Layout = "/Views/Users/_Layout.cshtml";
}

<link type="text/css" rel="stylesheet" href="~/css/users/userProfile.css" />
<script src="~/js/users/userProfile.js" asp-append-version="true"></script>

<script type="text/javascript">
    $(document).ready(function () {
        userProfile.initialize();
    });
</script>

<div class="container">
    <div class="d-flex flex-column">
        <div class="d-flex flex-row mb-3 mt-3 align-items-center">
            <div class="profile-image-holder">
                <img src="~/images/users/avatar.png">
            </div>
            <div class="d-flex flex-column">
                <span class="secondary-text">@localizer["ProfileDetails"]</span>
                <span class="username" data-bind="text: fullName"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="d-flex flex-column">
                    <div class="input-holder">
                        <label>
                            @localizer["PhoneNumber"]
                        </label>
                        <input class="form-control" type="text" data-bind="value: phoneNumber" />
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["Email"]
                        </label>
                        <input class="form-control" type="text" data-bind="value: email" />
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["Language"]
                        </label>
                        <select class="form-control form-select"
                            data-bind="value: language, options: languageOptions, optionsText: 'text',  optionsValue: 'id', optionsCaption: 'Language', valueAllowUnset: true"></select>
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["Currency"]
                        </label>
                        <input class="form-control" type="text" data-bind="value: currency" disabled />
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["AccountStatus"]
                        </label>
                        <input class="form-control" type="text" data-bind="value: accountStatus" disabled />
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["DateJoined"]
                        </label>
                        <input class="form-control" type="text" data-bind="value: dateJoined" disabled />
                    </div>
                    <div class="input-holder">
                        <label>
                            @localizer["AccountAdmin"]
                        </label>
                        <input class="form-control" type="text" data-bind="value: accountAdmin" disabled />
                    </div>
                    <button class="mt-2 mb-4 w-100 button primary-button"
                    data-bind="click: saveProfileClick">@localizer["Save"]</button>

                </div>
            </div>
        </div>
    </div>
</div>